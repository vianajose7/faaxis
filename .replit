modules = ["nodejs-20", "postgresql-16"]
[deployment]
deploymentTarget = "autoscale"
build = ["sh", "-c", "npm ci && npm run build"]
run = ["sh", "-c", "node production-server.cjs"]

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 8080
externalPort = 8080

[workflows]
runButton = "Dev Server Fixed"

[[workflows.workflow]]
name = "Run"
author = 41521811
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build && NODE_ENV=production node dist/index.js"

[[workflows.workflow]]
name = "Dev Server"
author = 41521811
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development tsx server/index.ts"

[[workflows.workflow]]
name = "Production Build & Run"
author = 41521811
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Building client application...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Starting production server...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=production node dist/index.js"

[[workflows.workflow]]
name = "Dev Server Fixed"
author = 41521811
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"tsx.*server/index.ts\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 1"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development PORT=5000 tsx server/index.ts"

[nix]
channel = "stable-24_05"
